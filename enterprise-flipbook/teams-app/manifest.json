  "icons": { "color": "color.png", "outline": "outline.png" },
  "accentColor": "#0078d4",
  "staticTabs": [
    {
      "entityId": "flipbookTab",
      "name": "Flipbook",
      "contentUrl": "https://flipbook.yourdomain.com/index.html",
      "websiteUrl": "https://flipbook.yourdomain.com/index.html",
